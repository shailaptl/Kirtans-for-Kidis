{
    "manifest_version": 2,
    "name": "Kirtans for Kidis",
    "description": "Chose a bhajan based off of your mood!",
    "version": "1.0.3",
    "icons": { 
      "16": "icon_16.png",
      "19": "icon_19.png",
      "48": "icon_48.png",
      "128": "icon_128.png",
      "420": "icon_420.png" },
    "browser_action": {
      "default_title": "Kirtans for Kidis",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": ["notifications", "activeTab"],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
  }